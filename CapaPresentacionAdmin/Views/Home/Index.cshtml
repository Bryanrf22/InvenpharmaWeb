@{
    ViewData["Title"] = "Home Page";
}
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Dashboard</h1>
</div>
<ol class="breadcrumb mb-4 mt-2">
    <li class="breadcrumb-item"><a href="/">Resumen</a></li>
    <li class="breadcrumb-item active">Dashboard</li>
</ol>


<div class="row">
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col-sm-9">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                            Cantidad Clientes
                        </div>
                        <div id="totalCliente" class="h5 mb-0 font-weight-bold text-gray-800">0</div>
                    </div>
                    <div class="col-sm-3">
                        <i class="fas fa-user fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col-sm-9">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                            Cantidad Ventas
                        </div>
                        <div id="totalVentas" class="h5 mb-0 font-weight-bold text-gray-800">0</div>
                    </div>
                    <div class="col-sm-3">
                        <i class="fas fa-shopping-bag fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-info shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col-sm-9">
                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                            Cantidad Productos
                        </div>
                        <div id="totalProductos" class="h5 mb-0 font-weight-bold text-gray-800">0</div>
                    </div>
                    <div class="col-sm-3">
                        <i class="fas fa-boxes fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-info shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col-sm-9">
                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                            Cantidad Proveedores
                        </div>
                        <div id="totalProveedores" class="h5 mb-0 font-weight-bold text-gray-800">0</div>
                    </div>
                    <div class="col-sm-3">
                        <i class="fas fa-users fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-tags me-1"></i>
        <i class="m-0 font-weight-bold text-primary">Historial de Ventas</i>
    </div>
    <div class="card-body">
        <form action="@Url.Action("ExportarVentas","Home")" method="post">
            <div class="row align-items-end">
                <div class="col-sm-2">
                    <div class="mb-2">
                        <label class="form-label">Fecha de Inicio:</label>
                        <input class="form-control" type="text" id="txtfechainicio" name="fechainicio" autocomplete="off" />
                    </div>
                </div>
                <div class="col-sm-2">
                    <div class="mb-2">
                        <label class="form-label">Fecha Final:</label>
                        <input class="form-control" type="text" id="txtfechafinal" name="fechafinal" autocomplete="off"/>
                    </div>
                </div>
                <div class="col-sm-2">
                    <div class="mb-2">
                        <label class="form-label">ID Transacción:</label>
                        <input class="form-control" type="text" id="txtidtransaccion" name="idtransaccion" />
                    </div>
                </div>

                <div class="col-sm-2">
                    <div class="d-grid mb-2">
                        <button class="btn btn-outline-primary" id="btnBuscar" type="button"><i
                                class="fas fa-search"></i> Buscar</button>
                    </div>
                </div>
                <div class="col-sm-2">
                    <div class="d-grid mb-2">
                        <button class="btn btn-outline-success" type="submit"><i class="fas fa-file-excel"></i>
                            Exportar</button>
                    </div>
                </div>
            </div>
        </form>
        <hr />
        <div class="row">
            <div class="col-sm-12">
                <table id="tabla" class="display cell-border" style="width:100%">
                    <thead>
                        <tr>
                            <th>Fecha Venta</th>
                            <th>Cliente</th>
                            <th>Producto</th>
                            <th>Precio</th>
                            <th>Cantidad</th>
                            <th>Total</th>
                            <th>ID Transacción</th>
                        </tr>
                    </thead>
                    <tbody>

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.min.js"></script>

    <!-- DataTables CSS/JS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.5.0/css/responsive.dataTables.min.css" />
    <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.5.0/js/dataTables.responsive.min.js"></script>

    <script>
        $(document).ready(function () {

            $('#txtfechainicio').datepicker({
                dateFormat: 'dd-mm-yy'
            }).datepicker("setDate", new Date());
            $('#txtfechafinal').datepicker({
                dateFormat: 'dd-mm-yy'
            }).datepicker("setDate", new Date());



            jQuery.ajax({
                url: '@Url.Action("ObtenerReporte", "Home")',
                type: 'GET',
                dataType: 'json'
            }).done(function (data) {
                var objeto = data && data.resultado ? data.resultado : null;
                if (!objeto) {
                    $("#totalCliente,#totalVentas,#totalProductos,#totalProveedores").text('0');
                    return;
                }

                function getProp(obj, propPascal) {
                    if (!obj) return 0;
                    if (propPascal in obj) return obj[propPascal];
                    var camel = propPascal.charAt(0).toLowerCase() + propPascal.slice(1);
                    if (camel in obj) return obj[camel];
                    return 0;
                }

                var totalClientes = getProp(objeto, 'TotalCliente') || 0;
                var totalVentas = getProp(objeto, 'TotalVenta') || 0;
                var totalProductos = getProp(objeto, 'TotalProducto') || getProp(objeto, 'TotalProductos') || 0;
                var totalProveedores = getProp(objeto, 'TotalProveedor') || 0;


                $("#totalCliente").text(totalClientes);
                $("#totalVentas").text(totalVentas);
                $("#totalProductos").text(totalProductos);
                $("#totalProveedores").text(totalProveedores);
            }).fail(function (xhr, status, err) {
                console.error('Error ObtenerReporte:', status, err);
                $("#totalCliente,#totalVentas,#totalProductos,#totalProveedores").text('0');
            });


            var tabladata;

            tabladata = $("#tabla").DataTable({
                responsive: true,
                ordering: false,
                processing: true,
                serverSide: false,
                ajax: {
                    url: '@Url.Action("HistorialVentas", "Home")',
                    type: 'POST',
                    data: function (d) {
                        // send form values as parameters
                        return {
                            fechaInicio: $('#txtfechainicio').val(),
                            fechaFin: $('#txtfechafinal').val(),
                            idTransaccion: $('#txtidtransaccion').val()
                        };
                    },
                    dataSrc: 'data'
                },
                columns: [
                    { data: 'FechaVenta' },
                    { data: 'Usuario' },
                    { data: 'Producto' },
                    { data: 'Precio' },
                    { data: 'Cantidad' },
                    { data: 'Total' },
                    { data: 'TransaccionID' }
                ],
                language: { url: '//cdn.datatables.net/plug-ins/2.3.4/i18n/es-ES.json' }
            });

            // Log the AJAX response from the server so we can debug when table is empty
            $('#tabla').on('xhr.dt', function (e, settings, json, xhr) {
                console.log('DataTable xhr.dt json:', json);
                if (xhr) console.log('DataTable xhr status:', xhr.status, xhr.statusText);
            });

            // Buscar button reloads the table using current date inputs
            $('#btnBuscar').on('click', function () {
                tabladata.ajax.reload();
            });

        }); 
    </script>



}