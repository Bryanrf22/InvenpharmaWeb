@using System.Security.Claims
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CapaPresentacionTienda</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CapaPresentacionTienda.styles.css" asp-append-version="true" />
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
        crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>

<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-gradient-light">
            <div class="container-fluid px-4">
                <a class="navbar-brand text-dark" href="#!">Tienda</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation"><span
                        class="navbar-toggler-icon"></span></button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-lg-4">
                    </ul>
                    @{
                        var userEmail = User?.FindFirstValue(ClaimTypes.Email) ?? User?.Identity?.Name ?? string.Empty;
                        var isLoggedIn = (User?.Identity?.IsAuthenticated ?? false) && !string.IsNullOrEmpty(userEmail);
                    }

                    <form class="d-flex">
                        @if (!isLoggedIn)
                        {
                            <a class="btn btn-outline-primary" href='@Url.Action("Index", "Acceso")'>
                                Iniciar Sesión
                            </a>
                        }
                        else
                        {
                            <a class="btn btn-outline-dark me-2" href='@Url.Action("Carrito", "Tienda")'>
                                <i class="fas fa-shopping-cart"></i>
                                Carrito
                                <span class="badge bg-dark text-white ms-1 rounded-pill">@(ViewBag.CartCount ?? 0)</span>
                            </a>

                            <ul class="navbar-nav ml-auto">
                                <!-- Nav Item - User Information -->
                                <li class="nav-item dropdown no-arrow">
                                    <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="userDropdown"
                                        role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <span class="fa-stack fa-lg">
                                    <i class="fas fa-circle fa-stack-2x text-primary"></i>
                                    <i class="fas fa-user fa-stack-1x fa-inverse"></i>
                                </span>
                                    </a>
                                    <!-- Dropdown - User Information -->
                                    <ul class="dropdown-menu dropdown-menu-end shadow animated--grow-in"
                                        aria-labelledby="userDropdown">
                                        <li>
                                            <a class="dropdown-item d-flex align-items-center" href="#">
                                                <i class="fas fa-user-circle fa-sm fa-fw me-2 text-gray-400"></i>
                                                <strong>@userEmail</strong>
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" href="@Url.Action("MisCompras", "Tienda")"><i
                                                    class="fas fa-box fa-sm fa-fw me-2 text-gray-400"></i>Mis Compras</a>
                                        </li>
                                        <li>
                                            <hr class="dropdown-divider" />
                                        </li>
                                        <li>
                                            <a class="dropdown-item" href="@Url.Action("CerrarSesion", "Acceso")"><i class="fas fa-sign-out-alt fa-sm fa-fw me-2 text-gray-400"></i>Cerrar Sesión</a>
                                        </li>
                                    </ul>
                                </li>
                            </ul>
                        }

                    </form>
                </div>
            </div>
        </nav>

        @RenderBody()
    </header>
    
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Bootstrap 5 bundle (includes dropdowns) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- SweetAlert2 -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.all.min.js"></script>

    <!-- DataTables -->
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap4.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.5.0/js/dataTables.responsive.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.5.0/js/responsive.bootstrap4.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

<footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - CapaPresentacionTienda - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

</html>